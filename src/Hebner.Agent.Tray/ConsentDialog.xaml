<Window x:Class="Hebner.Agent.Tray.ConsentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hebner.Agent.Tray"
        mc:Ignorable="d"
        Title="Remote Access Request"
        Height="200"
        Width="400"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Remote Access Request"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1"
                    Margin="0,0,0,10">
            <TextBlock TextWrapping="Wrap">
                <Run Text="A remote technician is requesting access to your computer."/>
            </TextBlock>
            <TextBlock TextWrapping="Wrap"
                       FontStyle="Italic">
                <Run Text="{Binding Requester}"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">
            <Button x:Name="BtnDeny"
                    Content="Deny"
                    Width="80"
                    Height="30"
                    Click="BtnDeny_Click"/>
            <Button x:Name="BtnAllow"
                    Content="Allow"
                    Width="80"
                    Height="30"
                    Click="BtnAllow_Click"/>
        </StackPanel>
    </Grid>
</Window>
